#header
  #wrapper
    span.current_user_email = current_user.email
    = link_to 'Выход', destroy_user_session_path, method: :delete

#wrapper
  - @sites.each do |site|
    - if site.have_queries_or_positions?
      .profile_site
        .header = site.url
        .basic_table
          table
            thead
              tr
                td Запросы
                - site.position_date.each do |position|
                  td = position.created_at.strftime('%d')

            tbody
              - site.sorted_queries.each do |query|
                tr
                  td.query_word= query.word
                  = render 'positions', query: query